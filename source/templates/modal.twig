<div class="modal-container modal">
	<div class="modal__content">
		<h2 class="modal__title">Добавить в корзину</h2>
		<form class="modal__form add-to-cart form" action="https://echo.htmlacademy.ru/" method="post">
			<fieldset class="form__group">
				<legend class="form__title">Выберите размер:</legend>
				<ul class="control-container form__radio form__list">
					<li class="form__item">
						<label class="form__control control">
							<input class="visually-hidden control__input" type="radio" name="size-s" value="s">
							<span class="control__icon">
								<span class="control__label">S</span>
							</span>
						</label>
					</li>
					<li class="form__item">
						<label class="form__control control">
							<input class="visually-hidden control__input" type="radio" name="size-m" value="m">
							<span class="control__icon">
								<span class="control__label">M</span>
							</span>
						</label>
					</li>
					<li class="form__item">
						<label class="form__control control">
							<input class="visually-hidden control__input" type="radio" name="size-l" value="l">
							<span class="control__icon">
								<span class="control__label">L</span>
							</span>
						</label>
					</li>
				</ul>
			</fieldset>
			<button class="form__button button" type="submit">Добавить</button>
		</form>
	</div>
</div>
